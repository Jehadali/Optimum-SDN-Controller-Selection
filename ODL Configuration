# The installation of ODL is described Here.

sudo apt-get install default-jre-headless

sudo apt-get install openjdk-8-jdk

sudo apt-get install openjdk-8-jre

sudo apt-get install maven

#Setting java home

export Java_Home=/usr/lib/jvm/java-1.8.0-openjdk-i386 (for 32 bit)

export Java_Home=/usr/lib/jvm/java-1.8.0-openjdk-amd64 (for 32 bit)

sudo nano .profile 

#Now add the above path i.e. to the .profile file

Java_Home=:/usr/lib/jvm/java-1.8.0-openjdk-amd64 (for 32 bit)
